<div class="section-heading">
    <h2>Ticket For You For @Session["From"] to @Session["To"] </h2>
</div>
<div class="container">
    <table class="table table-hover table-bordered js-copytextarea " cellpadding="0" cellspacing="0" border="0"
           id="sampleTable">
        <tbody>
            @foreach (var item in Model)
            {
                <a href="~/KhachHang/DSachCBVe/@item.MaCB" style="text-decoration:none">
                    <div class="ticket">
                        <div class="qr_code">
                            <img src="~/Content/images/Vietjet-Air-Logo-PNG-3.png" alt="qr_code" />
                        </div>
                        <div class="content">
                            <div class="location">
                                <div class="item">
                                    @{ var MaSBdi = db.TuyenBays.Find(item.MaTBay);}
                                    <h1>@Html.DisplayFor(modelItem => MaSBdi.SanBayDi)</h1>
                                    <p>@item.NgayGio</p>
                                </div>
                                <div class="path">
                                    <ion-icon name="airplane"></ion-icon>
                                </div>
                                <div class="item">
                                    <h1>@Html.DisplayFor(modelItem => MaSBdi.SanBayDen)</h1>
                                    @{ DateTime timeto = (DateTime)item.NgayGio;}
                                    <p> @timeto.AddHours(2)
                                    </p>
                                </div>
                            </div>

                            <div class="info">
                                <div class="item">
                                    <h4>Code</h4>
                                    <p>@Html.DisplayFor(modelItem => item.MaCB)</p>
                                </div>
                                <div class="item">
                                    @{var tenmb = db.MayBays.Find(item.MaMB);
                                    }
                                    <h4>flight</h4>
                                    <p>@Html.DisplayFor(modelItem => item.MaMB)</p>
                                </div>
                                <div class="item">
                                    <h4>remaining seats</h4>
                                    @{ var checkdsve = db.Ves.Where(s => s.MaCB == item.MaCB && s.TinhTrang == "Chưa đặt chỗ").Count();}
                                    <p>@checkdsve</p>
                                </div>
                                <div class="item">
                                    <h4>Total Slot</h4>
                                    @{ var soghe = item.SoLuongGheHang1 + item.SoLuongGheHang2 + item.SoLuongGheHang3;}
                                    <p>@Html.DisplayFor(modelItem => soghe)</p>
                                </div>

                                <div class="item">
                                    <h4>terminal</h4>
                                    <p>P4</p>
                                </div>
                                <div class="item">
                                    <h4>Price</h4>
                                    <p> 70$</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
                <br />
            }
        </tbody>
    </table>
</div>

